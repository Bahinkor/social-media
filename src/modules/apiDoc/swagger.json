    "/post/{postID}/remove": {
      "delete": {
        "tags": [
          "Post"
        ],
        "summary": "Remove post api.",
        "responses": {
          "200": {
            "description": "Remove post successfully."
          },
          "422": {
            "description": "Post ID is not valid!"
          },
          "401": {
            "description": "User is not auth."
          },
